<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet"/>
    <link href="~/css/common.css" rel="stylesheet"/>

    @RenderSection("css",required: false)
    
</head>
<body>
    
    <header>
        <nav class="navbar fixed-top navbar-expand-xl justify-content-between">
                  
            <a class="navbar-brand" href="~/">
                <img src="~/assets/logo-large.png" width="73px" height="50px">
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#myNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="myNav">
                <ul class="nav navbar-nav ms-auto">
                        <li class="nav-item"><a href="#" class="btn-light text-center" >Book Now</a></li>
                        <li class="nav-item"><a href="~/home/Prices">Prices & services</a></li>
                        <li class="nav-item"><a href="#">Warranty</a></li>
                        <li class="nav-item"><a href="#">Blog</a></li>
                        <li class="nav-item"><a href="~/home/ContactUS">Contact</a></li>
                        <li class="nav-item"><a href="#" class="btn-light text-center">Login</a></li>
                        <li class="nav-item"><a href="~/home/Become_a_provider" class="btn-light text-center">Become a Helper</a></li>
                </ul>
            </div>
        </nav>
    </header>

    @RenderBody()

    <section class="newsletter my-5">
            <div class="row">
                  <div class="col-10 text-center email">
                        <div class="row">
                              <p>GET OUR NEWSLETTER</p>
                        </div>
                        <div class="row justify-content-center newsletter-input">
                              <input type="text" placeholder="YOUR EMAIL">
                              <input type="submit">
                        </div>
                  </div>
            </div>
      </section>

    <footer>
        <div class="footer-nav">
                <div class="col logo-div">
                    <img src="~/assets/logo-large.png" class="logo">
                </div>
                <div class="col-8 text-center footer-item">
                    <a href="~/">HOME</a>
                    <a href="~/home/AboutUS">ABOUT</a>
                    <a href="">TESTIMONIALS</a>
                    <a href="~/home/Faqs">FAQS</a>
                    <a href="">INSURANCE POLICY</a>
                    <a href="">IMPRESSUM</a>
                </div>
                <div class="col social-media">
                    <img src="~/assets/ic-facebook.png">
                    <img src="~/assets/ic-instagram.png">
                </div>
        </div>
        <div class="copyright justify-content-center align-content-center">
                <div class="col text-center copyright-message">
                    <p>©2018 Helperland. All rights reserved. <span style="margin-left:10px">Terms and Conditions | Privacy Policy</span></p>
                </div>
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
